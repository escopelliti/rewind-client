<Window x:Class="WpfApplication1.FullScreenRemoteServerControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FullScreenRemoteServerControl" WindowState="Maximized" Closing="Window_Closing" WindowStyle="None">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="Auto" Margin="10,23,0,0" VerticalAlignment="Top" Width="362">
            <Label Content="Apri il pannello di controllo:" Canvas.Left="10" Canvas.Top="82" Height="Auto" Width="Auto" FontSize="18"/>
            <Label x:Name="controlPanelShortcutLabel" Canvas.Left="256" Canvas.Top="82" Height="Auto" Width="130" FontSize="18"/>
            <Label Content="Cambia computer:" Canvas.Left="10" Canvas.Top="125" Height="Auto" Width="Auto" FontSize="18"/>
            <Label x:Name="switchServerShortcutLabel" Canvas.Left="256" Canvas.Top="126" Height="Auto" Width="130" FontSize="18"/>
            <Label Content="Sei attivo su:" Canvas.Left="10" Canvas.Top="167" Height="Auto" Width="Auto" FontSize="18"/>
            <Label x:Name="currentServerNameLabel" Canvas.Left="256" Canvas.Top="174" Height="Auto" Width="Auto" FontSize="18"/>
            <Label Content="Computer connessi:" Canvas.Left="10" Canvas.Top="205" Height="Auto" Width="Auto" FontSize="18"/>
            <ListView x:Name="connectedComputerList" Canvas.Left="256" Canvas.Top="213" IsEnabled="False">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="140" Header="Nome del Computer" />
                    </GridView>
                </ListView.View>
            </ListView>


        </Canvas>

    </Grid>
</Window>
